<form id="patient-update-form">
  <fieldset>
      First Name:
      <input value={{patient.first_name}} pattern=".{1,}" required title="1 characters minimum" type="text" name="patient[first_name]" maxlength="30">
      Last Name:
      <input value={{patient.last_name}} pattern=".{1,}" required title="1 characters minimum" type="text" name="patient[last_name]" maxlength="30">
      Age:
      <input value={{patient.age}} pattern=".{1,}" required title="1 characters minimum" type="text" name="patient[age]" maxlength="30">
      Height:
      <input value={{patient.height}} pattern=".{1,}" required title="1 characters minimum" type="text" name="patient[height]" maxlength="30">
      Weight:
      <input value={{patient.weight}} pattern=".{1,}" required title="1 characters minimum" type="text" name="patient[weight]" maxlength="30">
      Phone:
      <input value={{patient.phone}} pattern=".{1,}" required title="1 characters minimum" type="text" name="patient[phone]" maxlength="30">
      Primary Doctor:
      <input value={{patient.primary_doctor}} type="text" name="patient[primary_doctor]" maxlength="30">
    <input class="btn btn-primary" type="submit" name="submit" value="Submit">
  </fieldset>
</form>
