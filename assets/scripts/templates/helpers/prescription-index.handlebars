<br>

<button class="btn btn-primary" id="prescription-create-btn">Register New Prescription</button>

<br>

<form id="prescription-create">
  <fieldset>
    Drug:

    <select name="prescription[drug_id]">
      <option selected disabled>Select Drug</option>
      {{#each drugs as |drug|}}

        <option value={{drug.id}}>{{drug.name}}</option>
      {{/each}}
    </select>

    Patient:
    <select name="prescription[patient_id]">
      <option selected disabled>Select Patient</option>
      {{#each patients as |patient|}}
        <option value={{patient.id}}>{{patient.first_name}} {{patient.last_name}}</option>
      {{/each}}
    </select>

    Doctor:
    <select name="prescription[doctor_id]">
      <option selected disabled>Select Doctor</option>
      {{#each doctors as |doctor|}}
        <option  value={{doctor.id}}>{{doctor.first_name}} {{doctor.last_name}}</option>
      {{/each}}
    </select>

    Duration:
    <textarea pattern=".{1,}" required title="1 characters minimum" type="input" name="prescription[duration]" maxlength="30" rows="1"></textarea>
    Pharmacy Location:
    <textarea pattern=".{1,}" required title="1 characters minimum" type="input" name="prescription[pharmacy_location]" maxlength="50" rows="1"></textarea>
    Usage Directions:
    <textarea class="prescription-description" pattern=".{1,}" required title="1 characters minimum" type="input" name="prescription[usage_direction]" maxlength="200" rows="10" cols="30"></textarea>
    <input class="btn btn-danger" type="submit" name="submit" value="Register">
  </fieldset>
</form>

<br>

<div class="prescriptions">
<table id="t01">
  <tr>
    <th>Prescriptions</th>
    <th>Details</th>
    <th>Remove</th>
  </tr>

  {{#each prescriptions as |prescription|}}
    <tr>
      <td>{{prescription.patient_name}} with {{prescription.drug_name}} for {{prescription.duration}}</td>
      <td><button class="btn btn-primary btn-xs" id="prescription-update" data-id={{prescription.id}}>Details</button></td>
      <td><button class="btn btn-danger btn-xs" id="prescription-delete" data-id={{prescription.id}}>X</button></td>
    </tr>
  {{/each}}

</table>
</div>
