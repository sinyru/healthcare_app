<div class="drug-show">
<table id="t01">
  <tr>
    <th>Drug Name</th>
    <th>Description</th>
  </tr>

  <tr>
    <td>{{drug.name}}</td>
    <td>{{drug.description}}</td>
  </tr>
</table>

<form id="drug-update-form">
  <fieldset>
      Drug Name:
      <textarea pattern=".{1,}" required title="1 characters minimum" type="input" name="drug[name]" maxlength="30" rows="1">{{drug.name}}</textarea>
      Description:
      <textarea class="drug-description" pattern=".{1,}" required title="1 characters minimum" type="input" name="drug[description]" maxlength="30" rows="10" cols="30">{{drug.description}}</textarea>
    <input class="btn btn-danger" type="submit" name="submit" value="Change">
  </fieldset>
</form>
